{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
   <div class="container" style="margin-top:100px;margin-bottom:190px;">
       
   
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="container " >
				<div class="mb-3">
					vous avez connecte dans ,
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Se deconecte</a>
				</div>
			</div>
         {% else %}
         	 <div class="mb-3">
					s'inscrire ici
					<a href="{{ path('inscription') }}">inscription</a>
				</div>
		{% endif %}

		<div class="container">
			<div class="panel panel-primary">
				<div class="panel-heading">LOGIN</div>
				<div class="panel-body">
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
					<label for="inputPassword">Mot se passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
				<div class="panel-footer">
					<button class="btn  btn-primary" type="submit">connexion</button>
				</div>
			</div>
		</div>
	</form>
    </div>
{% endblock %}
