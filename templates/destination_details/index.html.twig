        <div class="d-none d-sm-block mb-5 pb-4">
            <div id="map" style="height: 480px; position: relative;"> </div>
            <script>
                let titles = ["Rose_valley", "Oscar_Hotel", "Al_Baraka", "Hotel_Riad",
                    "La_Gazelle", "Gironde", "La_Kasbah_des_sables", "Accord_Majeur",
                    "Kasbah_Taourirt", "Musée_Cinema"];
                let locations = [
                    { lat: 30.924896, lng: -6.929778 },
                    { lat: 30.941371, lng: -6.967543 },
                    { lat: 30.939755, lng: -6.984196 },
                    { lat: 30.920985, lng: -6.917401 },
                    { lat: 30.922876, lng: -6.926737 },
                    { lat: 30.921716, lng: -6.919862 },
                    { lat: 30.924578, lng: -6.878655 },
                    { lat: 30.923452, lng: -6.910536 },
                    { lat: 30.919967, lng: -6.899065 },
                    { lat: 30.921711, lng: -6.899371 },
                ];
                function initMap() {
                    var uluru = {
                        lat: 30.916663,
                        lng: -6.916663
                    };

                    var map = new google.maps.Map(document.getElementById('map'), { zoom: 10, center: uluru, scrollwheel: true, /*mapTypeId: 'satellite'*/mapTypeId: google.maps.MapTypeId.ROADMAP });
                    var marker = new google.maps.Marker({ position: uluru, map: map, clickable: true, animation: google.maps.Animation.BOUNCE/*DROP*/ });
                    marker.setTitle("cmnt");
                    marker.addListener('click', function () {
                        $('html,body').animate({
                            scrollTop: $("#" + marker.getTitle()).offset().top
                        },
                            'slow');
                    });

                    var markers = [];
                    for (let i = 0; i < locations.length; i++) {
                        var m = new google.maps.Marker({
                            position: locations[i],
                            map: map
                        });
                        m.setTitle(titles[i]);

                        markers.push(m);
                    }

                    var infowindow = new google.maps.InfoWindow();

                    markers.map((m) => {
                        m.addListener('click', function () {
                            $('html,body').animate({
                                scrollTop: $("#" + m.getTitle()).offset().top
                            },
                                'slow');
                        });
                        m.addListener('mouseover', function () {
                            infowindow.setContent(m.getTitle());
                            infowindow.open(map, m);
                        });
                    });

                }

            </script>

            <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCmC9pqdr3_Wbb9jGSl9EBKNNNAhcA6puE&callback=initMap"></script>

